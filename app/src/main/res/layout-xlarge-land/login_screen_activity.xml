<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:weightSum="6">

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5.5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/logo_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_spacer_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/spacer" />

            <ImageView
                android:id="@+id/login_logo"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:contentDescription="@string/image_description"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/login_build"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_weight="0"
                android:textColor="#90c4dc"
                android:textSize="16sp"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/logo_spacer_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/spacer" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/form_spacer_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/spacer" />

            <EditText
                android:id="@+id/editUser"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_corner_edittext"
                android:ems="10"
                android:hint="@string/userNameEditText"
                android:inputType="textNoSuggestions|textFilter|textVisiblePassword"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#bfbfbf"
                android:textCursorDrawable="@drawable/color_cursor"
                android:typeface="sans" />

            <EditText
                android:id="@+id/editpassworod"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_corner_edittext"
                android:ems="10"
                android:hint="@string/passwordEditText"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#bfbfbf"
                android:textCursorDrawable="@drawable/color_cursor"
                android:typeface="sans" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <CheckBox
                    android:id="@+id/showpwdcheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="0.8"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="Show password" />

                <TextView
                    android:id="@+id/btnforgotpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1.2"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="Forgot Credentials?"
                    android:textColor="@color/light_blue"/>

            </LinearLayout>

            <Button
                android:id="@+id/buttonlogin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:layout_weight="0"
                android:background="@drawable/login_button"
                android:ems="10"
                android:onClick="login"
                android:shadowColor="#ffffff"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="Login"
                android:textColor="#666666"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/settings_Button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0"
                android:visibility="gone"
                android:ems="10"
                android:textColor="@color/light_blue"
                android:onClick="login"
                android:shadowColor="#ffffff"
                android:gravity="center"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="0.5"
                android:text="Change IP Address"
                android:textSize="20sp"/>

            <!--<org.ei.telemedicine.view.customControls.CustomFontTextView-->
            <!--android:id="@+id/tv_another_login"-->
            <!--style="@style/CustomFontTextViewStyle.Home.RegisterName"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="ANM"-->
            <!--android:textSize="25sp" />-->


            <ImageView
                android:id="@+id/form_spacer_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/spacer" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_another"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:background="@drawable/boarder1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear_Button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/transparent_blue_background"
            android:ems="10"
            android:textAllCaps="false"
            android:text="Powered by DHANUSH INFOTECH"
            android:textColor="@android:color/white"
            android:textSize="20sp"
             />
    </LinearLayout>
</LinearLayout>